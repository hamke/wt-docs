meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

if is_home()
    meta(http-equiv="refresh", content="0;url=https://www.wp-talk.com/")

title
    block site_title
        = theme.title || config.title
block description
    meta(name="description", content= theme.description ? theme.description : config.description ? config.description : 'A Blog Powered By WP-Talk')

meta(name="viewport", content="width=device-width, initial-scale=1")

link(rel="icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("css/style.css"))
link(rel="stylesheet", href=url_for("css/all.css"))

- var xml = config.url + '/atom.xml'
    link(rel="search", type="application/opensearchdescription+xml", href=xml, title=config.title)

script(async='' src='https://www.googletagmanager.com/gtag/js?id=UA-129198477-4')
script.
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'UA-129198477-4');
